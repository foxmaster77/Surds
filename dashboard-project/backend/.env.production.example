# Backend Environment Configuration for Production

# Server Configuration
PORT=10000
NODE_ENV=production

# Database Configuration
# Get this from MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/database
MONGODB_URI=mongodb+srv://linkforge_user:your-password@cluster0.xxxxx.mongodb.net/linkforge?retryWrites=true&w=majority

# JWT Configuration
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-64-character-hex-secret-min-32-chars-use-openssl-rand
JWT_EXPIRE=7d

# CORS Configuration
# List allowed origins (comma-separated)
FRONTEND_URL=https://yourdomain.com
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Logging
LOG_LEVEL=info
LOG_DIR=/tmp/logs

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Optional: Stripe (if implementing payments)
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_PUBLIC_KEY=pk_live_your_stripe_public_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Optional: Email Service
SENDGRID_API_KEY=SG.your_sendgrid_api_key
EMAIL_FROM=noreply@yourdomain.com

# Optional: Analytics
ANALYTICS_ID=your-analytics-id

# Session Security
SESSION_SECRET=your-session-secret-min-32-chars
SESSION_TIMEOUT=604800000

# API Configuration
API_VERSION=v1
API_BASE_URL=https://api.yourdomain.com

# Optional: Third-party Services
REDIS_URL=redis://your-redis-url
SENTRY_DSN=https://your-sentry-dsn
